
{
  "firestore": { 
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": { 
    "rules": "storage.rules"
  },
  "functions": [
    {
      "source": "functions",     
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "runtime": "nodejs22",
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": { 
      "region": "europe-west1"

    }
  }
}